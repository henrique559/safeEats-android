<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.details.menu.usuarioFragments.trocarSenha.TrocarSenhaUsuario">

    <!-- Título para inserir senha anterior -->

    <Button
        android:id="@+id/LoginButtonEnviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/buttonColor"
        android:contentDescription="Botão para finalizar o cadastro"
        android:text="Finalizar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmacaoSenha" />

    <TextView
        android:id="@+id/senhaAnteriorTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Digite sua senha anterior"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- EditText para senha anterior -->
    <EditText
        android:id="@+id/senhaAnterior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Senha Anterior"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/senhaAnteriorTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Título para inserir a nova senha -->
    <TextView
        android:id="@+id/novaSenhaTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Digite sua nova senha"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/senhaAnterior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- EditText para nova senha -->
    <EditText
        android:id="@+id/novaSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nova Senha"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/novaSenhaTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Título para confirmar a nova senha -->
    <TextView
        android:id="@+id/confirmacaoSenhaTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirme sua nova senha"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/novaSenha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- EditText para confirmar a nova senha -->
    <EditText
        android:id="@+id/confirmacaoSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Confirmar Nova Senha"
        android:inputType="textPassword"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/confirmacaoSenhaTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

