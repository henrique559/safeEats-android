<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_card"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Imagem do Produto -->
        <ImageView
            android:id="@+id/imagemProdutoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dall_e_2024_11_16_12_25" />

        <!-- Nome do Produto -->
        <TextView
            android:id="@+id/nomeProdutoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/descricaoProdutoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição do Produto"
            android:textSize="16sp"
            android:textColor="#666"
            android:layout_marginBottom="12dp" />

        <!-- Categoria -->
        <TextView
            android:id="@+id/categoriaProdutoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria: Frutas"
            android:textSize="14sp"
            android:textColor="#888"
            android:layout_marginBottom="8dp" />

        <!-- Disponibilidade -->
        <TextView
            android:id="@+id/disponibilidadeProdutoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponível em estoque: "
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp" />

        <!-- Preço -->
        <TextView
            android:id="@+id/precoProdutoDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 299,99"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginBottom="16dp" />

        <!-- Botão de Ação -->
        <Button
            android:id="@+id/adicionarCarrinhoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar ao Carrinho"
            android:backgroundTint="@color/buttonColor"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Seção de Reviews e Comentários -->
        <TextView
            android:id="@+id/tituloReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliações e Comentários"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Review 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/background_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João da Silva"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produto excelente! Chegou rápido e é de ótima qualidade."
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <RatingBar
                android:id="@+id/ratingReview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="5"
                android:isIndicator="true"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Review 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/background_card"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maria Oliveira"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#444" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bom produto, mas a embalagem veio danificada."
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <RatingBar
                android:id="@+id/ratingReview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3"
                android:isIndicator="true"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
