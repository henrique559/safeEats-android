<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:background="@color/backgroundColor"
    android:elevation="6dp"
    android:clipToOutline="true">

    <!-- Cabeçalho com Nome e Ícone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/itemIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person_fill"
            android:layout_marginEnd="8dp"
            android:contentDescription="User Icon" />

        <TextView
            android:id="@+id/itemNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: João Silva"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/itemEmailIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mail_24dp_000000_fill1_wght400_grad0_opsz24"
            android:layout_marginEnd="8dp"
            android:contentDescription="Email Icon" />

        <TextView
            android:id="@+id/itemEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: joao.silva@example.com"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Telefone -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/itemTelefoneIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/call_24dp_000000_fill1_wght400_grad0_opsz24"
            android:layout_marginEnd="8dp"
            android:contentDescription="Phone Icon" />

        <TextView
            android:id="@+id/itemTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telefone: +55 (11) 91234-5678"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- CPF -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/itemCPFIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/description_24dp_000000_fill1_wght400_grad0_opsz24"
            android:layout_marginEnd="8dp"
            android:contentDescription="Document Icon" />

        <TextView
            android:id="@+id/itemCPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF: 123.456.789-10"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Endereço -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/itemEnderecoIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pin_drop_24dp_000000_fill1_wght400_grad0_opsz24"
            android:layout_marginEnd="8dp"
            android:contentDescription="Location Icon" />

        <TextView
            android:id="@+id/itemEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço: Rua Exemplo, 123, São Paulo"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Botão de Ação -->
    <Button
        android:id="@+id/itemButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ver Detalhes"
        android:backgroundTint="@color/buttonColor"
        android:textColor="@android:color/white"
        android:elevation="2dp" />
</LinearLayout>

